<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_ly_outsize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:minHeight="45dp"
            android:text="分享到"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dlg_share"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/share_tv_weichat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_common_press"
                android:drawablePadding="12dp"
                android:drawableTop="@drawable/ic_share_weichat"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="微信好友"
                android:textColor="#ff999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/share_tv_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_common_press"
                android:drawablePadding="12dp"
                android:drawableTop="@drawable/ic_share_circle"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="朋友圈"
                android:textColor="#ff999999"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/share_btn_close"
            style="@style/ButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_common_press"
            android:minHeight="50dp"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>
</FrameLayout>